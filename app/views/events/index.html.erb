<p>
    <% if @can_edit %>
        <% link_to 'Create Event', 'javascript:void()', id: 'new_event' %>
    <% end %>
</p>
<div>
  <div class='calendar'></div>
</div>
<div id="event_desc_dialog" class="dialog" style="display:none;"></div>
<div id="create_event_dialog" class="dialog" style ="display:none;">
  <%= render 'form' %>
</div>

<%= javascript_include_tag "events" %>
<%= javascript_include_tag 'fullcalendar' %>
<%= javascript_include_tag 'gcal' %>
<%= javascript_include_tag 'jquery-ui-1.10.3.custom.min' %>

<script>
  $(document).ready(function(){
    if ($(window).width() < 600) {
      gon.full_calendar_options['header'] = {
        left: 'prev,next',
        center: 'title',
        right: 'basicWeek,basicDay'
        }
      gon.full_calendar_options['defaultView'] = 'basicWeek'
    }
    $('.calendar').fullCalendar(gon.full_calendar_options);
  });
</script>

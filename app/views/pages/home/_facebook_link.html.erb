<div class='facebookpost <%= (index.even?) ? 'right' : 'left' %>'>
    <div class='row'>
        <div class='col-md-2'>
            <%= image_tag(post[:user_image]) %>
        </div>
        <div class='col-md-10'>
            <h4><%= post[:user_name] %> shared a <%= post[:type] %></h4>
        </div>
    </div>
    <div class='row'>
        <div class='col-md-12'>
            <a href='<%= post[:link] %>'>
                <% if post[:img_src] != '' %>
                    <%= image_tag(post[:img_src], class: 'fbpostimage') %>
                <% else %>
                    <%= post[:link] %>
                <% end %>
            </a>
        </div>
    </div>
    <div class='row'>
        <div class='col-md-12'>
            <p><%= post[:caption] %></p>
        </div>
    </div>
</div>

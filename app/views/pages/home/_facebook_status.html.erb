<div class='facebookpost <%= (index.even?) ? 'right' : 'left' %>'>
    <div class='row'>
        <div class='col-md-2'>
            <%= image_tag(post[:user_image]) %>
        </div>
        <div class='col-md-10'>
            <h4><%= post[:user_name] %> Says</h4>
        </div>
    </div>
    <div class='row'>
        <div class='col-md-12'>
            <p><%= post[:message] %></p>
        </div>
    </div>
</div>
